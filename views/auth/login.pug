extends ../layouts/common

block content
    h1 Login
    if errors
      each error in errors
          .alert.alert-danger= error

    form(action="/auth/login", method="POST")
      .form-group
          label(for="email") Email
          input#email.form-control(type="text", name="email", value=values ? values.email : "", required)
      .form-group
          label(for="password") Password
          input#password.form-control(type="password", name="pass", value=values ? values.pass : "", required)
      
      button.btn.btn-primary Login
