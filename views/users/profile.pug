extends ../layouts/common

block content
  h1 Update user
  if user.avatarUrl
    img(src=user.avatarUrl, width="128")
  else
    img(src="/logo.jpg", alt="avatar", width="128")
  a.btn.btn-primary(href="/profile/avatar/"+ user.id) Update avatar
  form(method="POST", action="/profile")
    input#id(name="id", type="hidden", value=user.id)
    .form-group
      label(for="name")
      input#name.form-control(name="name", type='text', value=user.name)
    
    button.btn.btn-primary Update

    